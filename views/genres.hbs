<table id="genre-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value ={{this.id}}>
            <td>{{this.genre_id}}</td>
            <td>{{this.genre_name}}</td>  
            <td>{{this.description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a New Genre</h2>
<p>To add a new Genre, please enter their information below and click 'Submit'!</p>
<form id="add-genre-form" method="POST" action="/add-genre-form">
    <label for="input-genre">Genre: </label>
    <input type="text" name="input-genre" id="input-genre">
    <label for="input-description">Description: </label>
    <input type="text" name="input-description" id="input-description">


    <input type="submit">
</form>