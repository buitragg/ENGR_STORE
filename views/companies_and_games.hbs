</div>

<table id="companyGames-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value ={{this.id}}>
            <td>{{this.id}}</td>
            <td>{{this.game_id}}</td>
            <td>{{this.company_id}}</td>  
        </tr>
        {{/each}}
    </tbody>
</table>
<h2>Add a New Game and Company </h2>
<p>To add a new Games and Company,  please enter their information below and click 'Submit'!</p>

<form id="add-c&g-form" method="POST" action="/add-c&g-form">
     <select name="input-game" id="input-game">
        <option value="">Select a Game:</option>
        {{#each games}}
        <option value="{{this.game_id}}">{{this.game_name}}</option>
        {{/each}}
    </select>
     <select name="input-company" id="input-company">
        <option value="">Select a Company: </option>
        {{#each companies}}
        <option value="{{this.company_id}}">{{this.company_name}}</option>
        {{/each}}
    </select>

    <input type="submit">

</form>